<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/imgPlayerImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="#000"
        android:src="@mipmap/ic_launcher"
        />
    <ImageButton
        android:id="@+id/btnReportMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_report"
        android:background="#000"
        android:textSize="12sp"
        android:layout_below="@id/imgPlayerImage"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tvPlayerNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:maxLength="20"
        android:background="@drawable/bg_chat_nickname_other"
        android:text="Amir Reza"
        android:textColor="@color/ChatText"
        android:layout_toRightOf="@id/imgPlayerImage"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tvPlayerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:textColor="@color/ChatText"
        android:padding="10dp"
        android:background="@drawable/bg_chat_message_other"
        android:text="هالا لالای لالای هالا لای لای"
        android:layout_below="@id/tvPlayerNickName"
        android:layout_alignLeft="@id/tvPlayerNickName"
        android:layout_alignStart="@id/tvPlayerNickName"
        android:layout_alignParentRight="true"/>

</RelativeLayout>